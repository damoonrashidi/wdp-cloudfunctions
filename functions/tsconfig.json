{
  "compilerOptions": {
    "lib": ["es6", "ES2015"],
    "module": "commonjs",
    "outDir": "lib",
    "sourceMap": true,
    "target": "es6",
    "strict": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true
  },
  "compileOnSave": true,
  "include": ["src"]
}
